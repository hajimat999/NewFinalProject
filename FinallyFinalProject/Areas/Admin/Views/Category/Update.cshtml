@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="main-panel">
    <div class="create">
        <h2>Create Category</h2>
        <form method="post">
            <label for="">Name:</label> <br>
            <input asp-for="CategoryName" placeholder="Name"><br>
            <span class="text-danger" asp-validation-for="CategoryName"></span> <br />
            <button type="submit">Update</button>
        </form>
    </div>
</div>

