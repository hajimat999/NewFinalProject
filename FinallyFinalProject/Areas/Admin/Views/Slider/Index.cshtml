@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="table-wrap">
        <div class="category">
            <h2>Slider</h2>
            <a asp-area="Admin" asp-controller="slider" asp-action="Create">Create Slider</a>
        </div>
        <table class="table">
            <thead class="thead-primary">
                <tr>
                    
                    <th>Image</th>
                    <th>Title1</th>
                    <th>Title2</th>
                    <th>Description</th>
                    <th>Create</th>
                    <th>Update</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Slider slider in Model)
                {
                    <tr>
                    
                        <td><img style="width:170px; height:170px; object-fit:contain;" src="~/Admin/NewImages/@slider.Image" alt=""/></td>
                        <td>@slider.Title1</td>
                        <td>@slider.Title2</td>
                        <td>@slider.Description</td>
                        <td>@slider.CreatedAt.ToShortDateString()</td>
                        <td>@slider.UpdateAt.ToShortDateString()</td>
                        <td>
                            <div class="div">
                                <a asp-area="admin" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id"><i class="fa-solid fa-trash"></i></a>
                                <a asp-area="admin" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id">
                                    <i class="fa-solid fa-pen"></i>

                                </a>

                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

