@using FinallyFinalProject.HomeVModels
@model LoginVModel
<section class="header-title">
    <h1>Login</h1>
    <ul>
        <li><a href="index.html">Home</a></li>
        <li><span>/</span></li>
        <li>Login</li>
    </ul>
</section>
<section id="ten">
    <div class="login">
        <form method="post">
            <h4>Login</h4>
            <div class="col-md-12">
                <label>Username*</label>
                <input asp-for="UserName" placeholder="Username"> <br />
                <span class="text text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="col-md-12">
                <label>Password</label>
                <input asp-for="Password" placeholder="Password"> <br />
                <span class="text text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="check">
                <input asp-for="RememberMe" type="checkbox" id="remember_me">
                <label for="remember_me">Remember me</label> <br />
                <span class="text text-danger" asp-validation-for="RememberMe"></span>
            </div>
            <div class="forget">
                <a href="#"> Forgotten password?</a>
            </div>
            <div class="bat">
                <button type="submit">Login</button>
            </div>
        </form>
    </div>
</section>
<div class="alert alert-danger" style="color:red; text-align:center" asp-validation-summary="ModelOnly"></div>

